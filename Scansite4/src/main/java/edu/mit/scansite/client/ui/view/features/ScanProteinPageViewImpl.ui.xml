<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:wf="urn:import:edu.mit.scansite.client.ui.widgets.features"
	xmlns:wg="urn:import:edu.mit.scansite.client.ui.widgets.general">
	<g:HTMLPanel>
		<h2>Scan Protein for Motifs</h2>
		<fieldset>
			<legend>Scan Protein for Motifs</legend>
			<ol>
				<wf:ChooseProteinWidget ui:field="chooseProteinWidget"
					initDataSources="true" />
				<li>
					<label>Motif space</label>
					<g:RadioButton ui:field="motifSpaceAllRadioButton"
						name="motifSpace" checked="true">All
						motifs</g:RadioButton>
					<g:RadioButton ui:field="motifSpaceSelectedRadioButton"
						name="motifSpace">Selected
						motifs and groups</g:RadioButton>
					<g:RadioButton ui:field="motifSpaceUserDefinedRadioButton"
						name="motifSpace">User defined motifs</g:RadioButton>
				</li>
				<li id="scanMotifsAll">
					<wf:ChooseAllMotifsWidget ui:field="chooseAllMotifsWidget" />
				</li>
				<li id="scanMotifsSelected" style="display: none;">
					<wf:ChooseSelectedMotifsWidget
						ui:field="chooseSelectedMotifsWidget" />
				</li>
				<li id="scanMotifsUserDefined" style="display: none;">
					<wf:ChooseUserFileMotifWidget
						ui:field="chooseUserFileMotifWidget" />
				</li>
				<li>
					<wf:StringencyLevelWidget ui:field="stringencyLevelWidget" />
				</li>
				<li>
					<label
						for="{showDomainsCheckBox.getElement.getFirstChildElement.getId}">Show predicted domains</label>
					<g:CheckBox ui:field="showDomainsCheckBox" enabled="true" />
				</li>
				<li>
					<label
						for="{previouslyMappedSitesOnlyCheckBox.getElement.getFirstChildElement.getId}">Show only previously mapped sites
					</label>
					<g:CheckBox ui:field="previouslyMappedSitesOnlyCheckBox" enabled="true" />
				</li>
				<li>
					<wf:HistogramSelectionWidget ui:field="histogramSelectionWidget" />
				</li>
				<li>
					<wf:DataSourceWidget ui:field="localizationDataSourceWidget"
						initDataSources="true" dataSourceTypeShortName="localization" />
				</li>
				<li>
					<g:SubmitButton ui:field="submitButton">Submit</g:SubmitButton>
					<span id="waitScan" class="waitImage" style="display: none;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
					<wg:MessageDisplayWidget ui:field="messageDisplayWidget" />
				</li>
			</ol>
		</fieldset>
	</g:HTMLPanel>
</ui:UiBinder> 