<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:wm="urn:import:edu.mit.scansite.client.ui.widgets.motifs">
	<g:HTMLPanel>
		<fieldset>
			<legend>
				<span ui:field="legendSpan">Selected motifs and groups</span>
			</legend>
			<ol>
				<li>Select the motifs and motif groups you want to search for.</li>
				<li>
					<wm:MotifClassWidget ui:field="motifClassWidget"
						radioButtonGroupName="selectedMotifsMotifClass" />
				</li>
				<li>
					<label for="motifsListBoxId">Motifs</label>
					<g:ListBox ui:field="motifsListBox" multipleSelect="true"
						width="350px" />
					<span id="wait" class="waitImage" style="visibility: hidden;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
				</li>
				<li ui:field="motifGroupsLI">
					<label for="motifGroupsListBoxId">Motif groups</label>
					<g:ListBox ui:field="motifGroupsListBox" multipleSelect="true"
						width="350px" />
				</li>
			</ol>
		</fieldset>
	</g:HTMLPanel>
</ui:UiBinder> 