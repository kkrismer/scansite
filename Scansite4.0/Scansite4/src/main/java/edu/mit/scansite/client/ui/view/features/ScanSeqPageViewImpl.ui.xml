<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:wf="urn:import:edu.mit.scansite.client.ui.widgets.features"
	xmlns:wm="urn:import:edu.mit.scansite.client.ui.widgets.motifs" xmlns:wg="urn:import:edu.mit.scansite.client.ui.widgets.general">
	<g:HTMLPanel>
		<h2>Find Sequence Match</h2>
		<fieldset>
			<legend>Find Sequence Match</legend>
			<ol>
				<li>
					<label>Choose search method</label>
					<g:RadioButton ui:field="searchMethodSeqPatternRadioButton"
						ui:name="searchMethod" checked="true">Sequence pattern(s)</g:RadioButton>
					<g:RadioButton ui:field="searchMethodRegExRadioButton"
						ui:name="searchMethod">Regular expression</g:RadioButton>
				</li>
				<li id="scanSeqSeqPattern">
					<wf:SeqPatMethodWidget ui:field="seqPatMethodWidget" />
				</li>
				<li id="scanSeqRegEx" style="display: none;">
					<wf:RegExMethodWidget ui:field="regExMethodWidget" />
				</li>
				<li>
					<wf:DataSourceWidget ui:field="dataSourceWidget" initDataSources="true" />
				</li>
				<li>
					<wf:DbRestrictionWidget ui:field="dbRestrictionWidget"
						showSequenceRegExField="false" />
				</li>
				<li>
					<g:SubmitButton ui:field="submitButton">Submit</g:SubmitButton>
					<span id="waitScan" class="waitImage" style="display: none;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
					<wg:MessageDisplayWidget ui:field="messageDisplayWidget" />
				</li>
			</ol>
		</fieldset>
	</g:HTMLPanel>
</ui:UiBinder> 